extends layout

block layout-head
  link(rel='stylesheet', href='/stylesheets/style.css')

block layout-body
  section
    article.miu-hideScroll
      ul
        for x, y in piku
          li(class=`${(x.title.match(/[0-9]:[0-9]+/)) ? 'modified' : 'not'}`)
            a(href=`#${y}`)= x.url
    article.yt
      div#info-box
        h3#no no
        input#title(type="text" placeholder="제목" maxlength=40)
        input#url(type="text" placeholder="영상 링크")
        div
          input#start(type="number" placeholder="시작")
          input#end(type="number" placeholder="끝")
      div#yt-box
        div#player
  script.
    var player;

    function onYouTubeIframeAPIReady() {
      player = new YT.Player('player', {
        width: '',
        height: '',
        videoId: '',
        playerVars: JSON.stringify({
          loop: "1",
          iv_load_policy: "3",
          mute: "0",
          enablejsapi: "1",
          widgetid: "1",
        }),
        events: {
          'onReady': onPlayerReady,
          'onStateChange': onPlayerStateChange
        }
      });
    }

    function onPlayerReady(event) {
      event.target.playVideo();
    }

    function onPlayerStateChange(event) {}

    (function () {
      document.getElementsByClassName('miu-hideScroll')[0].scrollTo({
        top: document.getElementsByClassName('not')[0].offsetTop - 200,
      })

      document.getElementById('title').addEventListener('focusout', function () {
        $.ajax({
          type: "patch",
          url: "/patch/title/" + document.getElementById('no').innerText,
          data: {
            no: document.getElementById('no').innerText,
            title: this.value
          },
          success: function (data) {
            if (data === "true") {
              console.log("변경되었습니다.");
            } else {
              console.log("변경에 실패하였습니다.");
            }
          }
        });
      });

      function youtube_parser(url) {
        const regExp = /^.*(youtu\.be\/|vi?\/|u\/\w\/|embed\/|\?vi?=|&vi?=)([^#&?]*).*/;
        const match = url.match(regExp);
        return (match && match[2].length === 11) ? match[2] : false;
      }

      const changeVid = function () {
        if (youtube_parser(document.getElementById('url').value))
          $.ajax({
            type: "patch",
            url: "/patch/video/" + document.getElementById('no').innerText,
            data: {
              url: document.getElementById('url').value,
              start: document.getElementById('start').value,
              end: document.getElementById('end').value,
              no: document.getElementById('no').innerText,
            },
            success: function (data) {
              if (data === "true") {
                console.log("변경되었습니다.");
              } else {
                console.log("변경에 실패하였습니다.");
              }
            }
          });
        else
          console.error('링크 재확인 요망')
      };

      document.getElementById('url').addEventListener("focusout", changeVid);
      document.getElementById('start').addEventListener("focusout", changeVid);
      document.getElementById('end').addEventListener("focusout", changeVid);

      window.addEventListener('hashchange', async function () {
        const id = location.hash.substring(1);
        let start;
        $.get('/' + id, {}, async function (data) {
          document.getElementById('no').innerHTML = id;
          document.getElementById('title').value = data.title;
          document.getElementById('url').value = 'https://www.youtube.com/watch?v=' + data.url;
          await player.loadVideoById(data.url, parseInt(data.start), 'large')
          await player.playVideo();
        });
      })
    })();
  script(src="https://www.youtube.com/iframe_api")
